<Application x:Class="ExcelCellFinder.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ExcelCellFinder.App"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:vm="clr-namespace:ExcelCellFinder.App.ViewModels.Pages"
             xmlns:page="clr-namespace:ExcelCellFinder.App.Views.Pages"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:SetupConditionPageViewModel}">
                <page:SetupConditionPage />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
